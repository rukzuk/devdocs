{% from "macros.twig" import class_link %}

{% block content %}
    <table>
        {% for class in classes %}
            <tr>
                <td>
                    {% if class.interface %}*{% endif %}
                    {{ class_link(class, {'target': 'main'}, true) }}
                    {% if class.interface %}*{% endif %}
                </td>
                <td>
                    {{ class.shortdesc|desc(class) }}
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
